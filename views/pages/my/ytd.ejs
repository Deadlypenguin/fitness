<% var title = 'My Year To Date' %>
<%- include('../../partials/header', {title: title}) -%>
<link rel="stylesheet" href="/css/my_ytd.css" />
<main>
    <div id="app" class="content">
        <div id="loading" v-if="loading">
            <h1 class="is-size-2">Loading</h1>
        </div>
        <div id="content" v-if="!loading">
            <h1 class="is-size-2">Settings</h1>
            <div class="control">
                <label v-for="type in distancetypes" class="radio">
                    <input type="radio" name="distancetype" :value="type" v-model="distancetype">
                    {{ distancetypemap[type] }}
                </label>
            </div>
            <div class="control">
                <label v-for="type in gendertypes" class="radio">
                    <input type="radio" name="icongender" :value="type" v-model="icongender">
                    {{ gendertypemap[type] }}
                </label>
            </div>
            <div class="control">
                <label v-for="type in platforms" class="radio">
                    <input type="radio" name="platform" :value="type" v-model="platform">
                    {{ platformmap[type] }}
                </label>
            </div>
            <h1 class="is-size-2">Output</h1>
            <div class="pre is-family-monospace">
                <div>YTD {{ year }}</div>
                <type-entry
                    v-for="type in types"
                    v-bind:type="type"
                    v-bind:duration="ytd.activities[type]"
                    v-bind:icongender="icongender"
                    v-bind:distancetype="distancetype"
                    v-bind:platform="platform"
                    v-if="ytd.activities[type] !== 0"
                ></type-entry>
            </div>
        </div>
    </div>
</main>
<script src="/js/axios.min.js"></script>
<script src="/js/moment.min.js"></script>
<script src="/js/vue.min.js"></script>
<script type="module" src="/js/my_ytd.js"></script>
<%- include('../../partials/footer') -%>